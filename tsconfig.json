{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@*": ["*"]
		},
		"target": "es6",
		"module": "commonjs",
		"outDir": "./build",
		"noImplicitAny": false,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": false
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
